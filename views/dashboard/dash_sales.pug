div(ng-controller="SalesAdminController")
  .header-title-sales.zigzag-pink
    h2 Sucursal
    select(ng-model="branch" ng-init="branch=branches[0]" ng-options="b.name for b in branches track by b.idbranch", required)


  div
    table.mdl-data-table.mdl-js-data-table.table-dash
      thead
        tr
          th.mdl-data-table__cell--non-numeric Ticket
          th.mdl-data-table__cell--non-numeric Fecha
          th Venta
          th.mdl-data-table__cell--non-numeric Sucursal
          th Detalle
      tbody
        tr(ng-repeat="t in tickets")
          td # {{t.idticket}}
          td {{t.date}}
          td $ {{t.price}}
          td {{t.name}}
          td
            button.mdl-button.mdl-js-button(ng-click="showSalesDialog(t.idticket)") Ver m√°s

    //- Dialog
    dialog#salesDialog.mdl-dialog.dialog-sales
      h3 Ticket # {{ticket.idTicket}}
      ul.demo-list-three.mdl-list(ng-repeat="t in ticket.products")
        li.mdl-list__item.mdl-list__item--three-line
          span.mdl-list__item-primary-content
            i.avatar-sales.material-icons.mdl-list__item-avatar(style="width: 47px;height: 45px; margin-right: 60px;background:{{t.color}}")
            span {{t.idproduct}} - {{t.name}}
            span.mdl-list__item-text-body
              | Precio Unitario $ {{t.unitary_price}}
            span.mdl-list__item-text-body(style="margin-top: -29px;")
              | Total $ {{t.total_price}}

      div.mdl-dialog__actions
        button.mdl-button.close(ng-click="closeDialog()") Cerrar
