form(ng-controller="ProductGeneralController" name="GeneralForm" novalidate)
  //- ProductId
  .mdl-grid
    .mdl-cell.mdl-cell--6-col
      .mdl-textfield.mdl-js-textfield
        input.mdl-textfield__input(type='text', name="idproduct" placeholder="Id Producto" ng-model="product.idproduct" required)
        .error-msg(ng-show='GeneralForm.$submitted || GeneralForm.idproduct.$touched')
          span(ng-show='GeneralForm.idproduct.$error.required') Campo requerido
      //- Name
      .mdl-textfield.mdl-js-textfield
        input.mdl-textfield__input(type='text' ng-model="product.name" placeholder="Nombre" name="name" required)
        .error-msg(ng-show='GeneralForm.$submitted || GeneralForm.name.$touched')
          span(ng-show='GeneralForm.name.$error.required') Campo requerido
      //- Description
      .mdl-textfield.mdl-js-textfield
        textarea.mdl-textfield__input(type='text' ng-model="product.description" placeholder="Descripción" rows="4" name="description" required)
        .error-msg(ng-show='GeneralForm.$submitted || GeneralForm.description.$touched')
          span(ng-show='GeneralForm.description.$error.required') Campo requerido
    .mdl-cell.mdl-cell--6-col
      //- Price
      .mdl-textfield.mdl-js-textfield
        input.mdl-textfield__input(type='text' ng-model="product.price" placeholder="Precio" name="price" required)
        .error-msg(ng-show='GeneralForm.$submitted || GeneralForm.price.$touched')
          span(ng-show='GeneralForm.price.$error.required') Campo requerido
      //- category
      .mdl-textfield.mdl-js-textfield
        input.mdl-textfield__input(type='text' ng-model="product.category" placeholder="Categoría" name="category" required)
        .error-msg(ng-show='GeneralForm.$submitted || GeneralForm.category.$touched')
          span(ng-show='GeneralForm.category.$error.required') Campo requerido
      //- branch_model
      .mdl-textfield.mdl-js-textfield
        input.mdl-textfield__input(type='text' ng-model="product.model" placeholder="Marca" name="model")
      //- div
      //-   label.mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect(for="{{$index}}" ng-repeat="b in branches track by $index")
      //-     input.mdl-checkbox__input(type='checkbox' id="{{$index}}" ng-model='branchSelected.selected[$index]')
      //-     span.mdl-checkbox__label {{b.name}}

  button.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--accent(ng-click="storeData(GeneralForm.$valid)")
