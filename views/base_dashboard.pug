doctype html
html(lang="es")
  head
    title= "Sistema Inventarios"

    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css")
    link(rel='stylesheet', href='/css/main.css', type='text/css')
  body(ng-app="AteneaApp" ng-cloak)
    .app-layout.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
      header.android-header.mdl-layout__header.mdl-layout__header--waterfall
        .mdl-layout__header-row
          span.android-title.mdl-layout-title
          // Add spacer, to align navigation to the right in desktop
          .android-header-spacer.mdl-layout-spacer
          // Navigation
          .android-navigation-container
            input#userId(type='hidden', value='{{current_user.id}}')
      .drawer.mdl-layout__drawer.mdl-color--pink-300.mdl-color-text--white
        header.drawer-header
          img.avatar(src='/static/images/chef.png')
          p Admin
        nav.navigation.mdl-navigation.mdl-color--white
          a#branchesBtn.mdl-navigation__link.menu-click(href='#', data-content='branches')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') store
            | Sucursales
          a#employeesBtn.mdl-navigation__link.menu-click.selected(href='#', data-content='employees')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') person
            | Empleados
          a#productsBtn.mdl-navigation__link.menu-click(href='#', data-content='products')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') layers
            | Productos
          a#salesBtn.mdl-navigation__link.menu-click(href='#', data-content='sales')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') attach_money
            | Ventas
          a.mdl-navigation__link.menu-click(href='/logout')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') closed
            | Cerrar Sesion
      .mdl-layout__content.mdl-color--grey-200.cd-tabs-content
        block content

        footer.footer.mdl-mega-footer
          .mdl-mega-footer--top-section
            .mdl-mega-footer--right-section
              a(href='http://www.craftcode.rocks')
                p.mdl-typography--font-light Powered by Craft Code: © 2017
          .mdl-mega-footer--middle-section
            p.mdl-typography--font-light Sistema Inventarios: © 2017
            p.mdl-typography--font-light Email: contact.craftcode@gmail.com




